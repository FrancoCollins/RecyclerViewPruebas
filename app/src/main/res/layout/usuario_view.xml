<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="3dp"
    android:layout_margin="6dp"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:gravity="center">

        <TextView
            android:id="@+id/idUsuario"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID" />

        <TextView
            android:id="@+id/nombreUsuario"
            android:textColor="@color/purple_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/nombre" />


        <TextView
            android:id="@+id/companiaUsuario"
            android:textColor="@color/purple_200"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="@string/telefono" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditarUsuario"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="Editar"
                android:textColor="@color/purple_500"
                android:textSize="12sp"
                card_view:icon="@android:drawable/ic_menu_edit"
                card_view:iconTint="#000000" />

            <Button
                android:id="@+id/btnEliminarUsuario"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="Eliminar"
                android:textColor="@color/purple_500"
                android:textSize="12sp"
                card_view:icon="@android:drawable/ic_menu_delete"
                card_view:iconTint="#000000" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>